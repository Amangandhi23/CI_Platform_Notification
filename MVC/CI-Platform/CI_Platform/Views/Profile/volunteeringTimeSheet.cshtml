    </div>
</div>


@*Modal For AddTimeBased Perpose*@
<div class="modal fade" id="AddTimebasedEdit" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <form method="post" asp-controller="Profile" asp-action="AddTimeBasedData">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Please input below Volunteering Hours</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Mission</label>
                        <select asp-for="@Model.MissionId" class="form-select mt-1 mb-3" aria-label="Default select example">
                            <option selected>Select Availability</option>
                            @foreach (var item in @Model.missionApplications.Where(id => id.DeletedAt == null && id.ApprovalStatus == "APPROVE"))
                            {
                                if (@item.Mission.MissionType == "TIME" && @item.Mission.DeletedAt == null)
                                {
                                    <option value="@item.Mission.MissionId">@item.Mission.Title</option>
                                }

                            }
                        </select>
                        <span asp-validation-for="@Model.MissionId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label class="col-form-label">Date Volunteered</label>
                        <input asp-for="@Model.Date" type="date" class="form-control Adddate">
                        <span asp-validation-for="@Model.Date" class="text-danger"></span>
                    </div>
                    <div class="mb-3 d-flex justify-content-between">
                        <div class="col-5">
                            <label class="col-form-label">Hours</label>
                            <input asp-for="@Model.hours" type="number" min="0" max="23" class="form-control AddHours" placeholder="Enter Spent Hours">
                            <span asp-validation-for="@Model.hours" class="text-danger"></span>
                        </div>
                        <div class="col-6">
                            <label class="col-form-label">Minutes</label>
                            <input asp-for="@Model.minutes" type="number" min="0" max="59" class="form-control AddMin" id="recipient-name" placeholder="Enter Spent Minutes">
                            <span asp-validation-for="@Model.minutes" class="text-danger"></span>
                        </div>

                    </div>
                    <div class="mb-3">
                        <label class="col-form-label">Message</label>
                        <textarea asp-for="@Model.message" class="form-control" id="message-text" placeholder="Enter your message"></textarea>
                        <span asp-validation-for="@Model.message" class="text-danger"></span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn text-center rounded-pill" style="border: 1px solid black;" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn orage_color text-center rounded-pill">Submit</button>
                </div>
            </form>

        </div>
    </div>
</div>






