@{
    ViewData["Title"] = "Profile Edit Page";
    Layout = "_Profilelayout";
}

@model CI_Platform.Entities.ViewModel.Profile

<div class="container">
    <div class="row">
        <div class="col-md-3  col-sm-12">
            <div class="border border-1 border-dark ">
                <div class="d-flex flex-column align-items-center justify-content-center mt-3">
                        @if(@Model.LoginUser.Avatar !=  null){
                            <img src="@Model.LoginUser.Avatar" class="rounded-circle" id="ImageModal" width="120" height="120" data-bs-toggle="modal" data-bs-target="#imgmodal" alt="">
                        }
                        else{
                            <img src="~/Assest/user1.png" class="rounded-circle" id="ImageModal" width="120" height="120" data-bs-toggle="modal" data-bs-target="#imgmodal" alt="">
                        }
                    <span>@Model.LoginUser.FirstName @Model.LoginUser.LastName</span>
                    <input type="button" class="d-none" id="UploadingImg">

                    <div class="d-flex flex-row flex-wrap">
                        <img src="~/Assest/facebook.png" height="25px" width="25px" class="p-1 m-2 border rounded-circle border-dark" alt="">
                        <img src="~/Assest/twitter.png" height="25px" width="25px" class="p-1 m-2 border border-1 rounded-circle border-dark" alt="">
                        <img src="~/Assest/linkedin.png" height="25px" width="25px" class="p-1 m-2 border border-1 rounded-circle border-dark" alt="">
                    </div>
                    <a href="" class="text-decoration-none" data-bs-toggle="modal" data-bs-target="#ChangePassword">Change Password</a>
                </div>
            </div>
        </div>

        <div class="col-md-9 col-sm-12">
            <h5>Basic Information</h5>
            <hr>
            <form method="post" asp-controller="Profile" asp-action="UserProfile">
                <div class="col">
                    <div class="row">
                        <div class="col-sm-12 col-md-6">
                            <label for="exampleFormControlInput1" class="form-label">Name</label>
                            <input asp-for="FirstName" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Enter your name" value="@Model.LoginUser.FirstName">
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="col-sm-12 col-md-6">
                            <label for="exampleFormControlInput1" class="form-label mt-3 mt-md-0">Surname</label>
                            <input asp-for="LastName" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Enter your Surname" value="@Model.LoginUser.LastName" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-sm-12 col-md-6">
                            <label for="exampleFormControlInput1" class="form-label">Employee Id</label>
                            <input asp-for="@Model.LoginUser.EmployeeId" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Enter your Employee Id">
                        </div>

                        <div class="col-sm-12 col-md-6">
                            <label for="exampleFormControlInput1" class="form-label mt-3 mt-md-0">Manager</label>
                            <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Enter your Manager Details">
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-sm-12 col-md-6">
                            <label for="exampleFormControlInput1" class="form-label">Title </label>
                            <input asp-for="@Model.LoginUser.Title" type="text" class="form-control" maxlength="255" id="exampleFormControlInput1" placeholder="Enter your Title">
                        </div>

                        <div class="col-sm-12 col-md-6">
                            <label for="exampleFormControlInput1" class="form-label mt-3 mt-md-0">Department</label>
                            <input asp-for="@Model.LoginUser.Department" type="text" maxlength="16" class="form-control" id="exampleFormControlInput1" placeholder="Enter your Department">
                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="mb-3">
                            <label for="exampleFormControlTextarea1" class="form-label">My Profile</label>
                            <textarea asp-for="MyProfile" class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Enter your comments"></textarea>
                            <span asp-validation-for="MyProfile" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="mb-3">
                            <label for="exampleFormControlTextarea1" class="form-label">Why I Volunteer ?</label>
                            <textarea asp-for="@Model.LoginUser.WhyIVolunteer" class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Enter your comments"></textarea>
                        </div>
                    </div>

                    <h5 class="mt-3">Address Information</h5>
                    <hr>

                    <div class="row mt-3">
                        <div class="col-sm-12 col-md-6">
                            <label for="CountryList">Country</label>
                            <select id="CountrySelect" asp-for="LoginUser.CountryId" class="form-select mt-1 mb-3" name="CountryList" aria-label="Default select example">
                                @{
                                    var selectedCountry = Model.CountryList.FirstOrDefault(m => m.CountryId == (Model.LoginUser.CountryId));

                                }
                                <option value="@selectedCountry.CountryId" selected>@selectedCountry.Name</option>

                                @foreach (var countries in Model.CountryList.Where(m => m.CountryId != (Model.LoginUser.CountryId)))
                                {
                                    <option value="@countries.CountryId">@countries.Name</option>

                                }
                            </select>
                        </div>

                        <div class="col-sm-12 col-md-6">
                            <label for="CityList">City</label>
                            <select asp-for="LoginUser.CityId" id="CityList" class="form-select mt-1 mb-3" name="CityList" aria-label="Default select example">
                                @{
                                    var selectedCity = Model.CityList.FirstOrDefault(m => m.CityId == (Model.LoginUser.CityId));
                                }

                                <option value="@selectedCity.CityId" selected>@selectedCity.Name</option>

                                @foreach (var cities in Model.CityList.Where(m => m.CityId != (Model.LoginUser.CityId) && m.CountryId == Model.LoginUser.CountryId))
                                {
                                    <option class="CitySelect" value="@cities.CityId">@cities.Name</option>

                                }
                            </select>
                        </div>
                    </div>

                    <h5 class="mt-4">Professional Information</h5>
                    <hr>

                    <div class="row mt-3 mb-4">
                        <div class="col-sm-12 col-md-6">
                            <label for="exampleFormControlInput1" class="form-label">Availability</label>
                            <select class="form-select mt-1 mb-3" aria-label="Default select example">
                                <option value="-1" selected>Select Availability</option>
                                <option value="1">Daily</option>
                                <option value="2">Weekly</option>
                                <option value="3">Weekend</option>
                                <option value="4">Monthly</option>
                            </select>
                        </div>

                        <div class="col-sm-12 col-md-6">
                            <label for="exampleFormControlInput1" class="form-label mt-3 mt-md-0">LinkedIn </label>
                            <input asp-for="@Model.LoginUser.LinkedInUrl" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Enter LinkedIn URL">
                        </div>
                    </div>

                    <div class="row mt-3">
                        <h5 class="mt-3">Add Skills</h5>
                        <hr>
                        <textarea class="form-control skillAddInTextarea" name="SkillList" rows="3" placeholder="" readonly style="max-height:120px; overflow-y:scroll;">
                            @{
                                var length = @Model.UserSkills.Count();
                                if(@Model.UserSkills != null)
                                {
                                    foreach (var item in @Model.UserSkills)
                                    {
                                        @Model.SkillList.FirstOrDefault(s => s.SkillId == @item.SkillId).SkillName @:   
                                    }    
                                }
                            }

                        </textarea>
                    </div>


                    <div class="d-flex justify-content-between">
                        <button type="button" class="px-4 py-1 px-md-5 text-center rounded-pill bg-white mt-4" data-bs-toggle="modal" data-bs-target="#SkillAdd">Add Skills</button>
                        <button type="submit"  class="px-4 py-1 px-md-5 orage_color rounded-pill bg-white mt-4 border-2">Save</button>
                    </div>

                </div>
            </form>


        </div>
    </div>
</div>

<!-- bootstrap Modal for Add Skill -->
<div class="modal fade" id="SkillAdd" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Skills</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <br />
                    <div class="row">

                        <div class="dual-list list-left col-md-5">
                            <div class="well text-right">
                                <div class="row">
                                    <div class="col-md-10">
                                        <div class="input-group">
                                            <span class="input-group-addon glyphicon glyphicon-search"></span>
                                            <input type="text" name="SearchDualList" class="form-control" placeholder="search" />
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="btn-group">
                                            <a class="btn btn-default selector" title="select all"><i class="glyphicon glyphicon-unchecked"></i></a>
                                        </div>
                                    </div>
                                </div>
                                <ul class="list-group">
                                    @if (Model.SkillList != null)
                                    {
                                        foreach (var item in Model.SkillList)
                                        {
                                            var data = Model.UserSkills.FirstOrDefault(id => id.SkillId == item.SkillId);
                                            @if (data == null)
                                            {
                                                <li class="list-group-item" value="@item.SkillId">@item.SkillName</li>
                                            }

                                        }
                                    }


                                </ul>
                            </div>
                        </div>

                        <div class="list-arrows col-md-1 text-center">
                            <button class="btn btn-default btn-sm move-left">
                                <img src="~/Assest/left.png" />
                            </button>

                            <button class="btn btn-default btn-sm move-right">
                                <img src="~/Assest/arrow.png" />
                            </button>
                        </div>

                        <div class="dual-list list-right col-md-5">
                            <div class="well">
                                <div class="row">
                                    <div class="col-md-2">
                                        <div class="btn-group">
                                            <a class="btn btn-default selector" title="select all"><i class="glyphicon glyphicon-unchecked"></i></a>
                                        </div>
                                    </div>
                                    <div class="col-md-10">
                                        <div class="input-group">
                                            <input type="text" name="SearchDualList" class="form-control" placeholder="search" />
                                            <span class="input-group-addon glyphicon glyphicon-search"></span>
                                        </div>
                                    </div>
                                </div>
                                <ul class="list-group">
                                    @if (@Model.UserSkills != null)
                                    {
                                        @foreach (var item in @Model.UserSkills)
                                        {
                                            <li class="list-group-item">@Model.SkillList.FirstOrDefault(s => s.SkillId == @item.SkillId).SkillName</li>
                                        }
                                    }
                                </ul>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="modal-footer SkillAdd">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="SaveSkill" class="btn btn-primary" data-bs-dismiss="modal">Save</button>
            </div>
            
        </div>
    </div>
</div>



<!-- bootstrap Modal for Change Password -->
<div class="modal fade" id="ChangePassword" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <form method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Change Password</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>


                <div class="modal-body">
                    <div class="form-group mb-3">
                        <label>Old Password</label>
                        <input type="password" asp-for="OldPassword" id="oldpwd" class="form-control" placeholder="****">
                        <span asp-validation-for="OldPassword" class="text-danger"></span>
                        <div id="ValidationForOldPassword" style="display:none;">
                            <span style="color:red; padding-left:6px">
                                Old Password Required.
                            </span>
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label>New Password</label>
                        <input type="password" asp-for="NewPassword" id="newpwd" class="form-control" placeholder="****">
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                        <div id="ValidationForNewPassword" style="display:none;">
                            <span style="color:red; padding-left:6px">
                                Old Password Required.
                            </span>
                        </div>
                    </div>
                    <div class="form-group mb-3">
                        <label>Confirm New Password</label>
                        <input type="password" asp-for="ConfirmNewPassword" id="cnewpwd" class="form-control" placeholder="****">

                        <div id="ValidationForConfirmNewPassword" style="display:none;">
                            <span style="color:red; padding-left:6px">
                                Confirm New Password Required.
                            </span>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary" asp-controller="Profile" asp-action="ChangePassword">Save</button>
                </div>
            </form>


        </div>
    </div>
</div>


