    <nav class="container mt-4" aria-label="Page navigation example">
        @if (pager.TotalPages > 0)
        {
            <ul class="pagination justify-content-center">

                @if(pager.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" onclick="PageChangejs(1)">
                         First
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" onclick="PageChangejs(@(pager.CurrentPage -1))">
                         Previous
                        </a>
                    </li>
                }
                else
                {
                    <li class="page-item" style="opacity:0.5">
                        <a class="page-link">
                         First
                        </a>
                    </li>
                    <li class="page-item" style="opacity:0.5">
                        <a class="page-link">
                         Previous
                        </a>
                    </li>
                }

                @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
                {
                    <li class="page-item @(pge == pager.CurrentPage ? "active" : "")">
                        <a class="page-link" onclick="PageChangejs(@pge)">
                            @pge
                        </a>
                    </li>
                }

                @if(pager.CurrentPage < pager.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" onclick="PageChangejs(@(pager.CurrentPage + 1))">
                         Next
                        </a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" onclick="PageChangejs(@pager.TotalPages)">
                         Last
