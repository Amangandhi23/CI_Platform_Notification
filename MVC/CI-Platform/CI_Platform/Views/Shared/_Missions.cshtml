                                        <span>@item.Deadline.Value.ToShortDateString()</span>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between border-bottom mb-3">
                                    <span>Seats-left</span>
                                    <span class="deadline">Deadline</span>
                                </div>


                            }
