@model CI_Platform.Entities.ViewModel.Mission_data

@{
    Mission_data pager = new Mission_data();

    int pageNo = 0;

    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }

}





@if (@Model.Mission.Count() > 0)
{
    <p class="d-none" id="PartialMissionCount">@Model.Mission.Count()</p>

    <div class="container" id="grid-view">
        <input hidden class="gridlistvalue" value="grid" type="text"> 
        <div class="row" id="gridmission__row">

            @foreach (var item in Model.Mission)
            {

                <div class="col-12 col-md-6 col-lg-4 pt-3 mission_div">
                    <div class="card" style="height:100%;">

                        @{
                            if (@Model.missionMedia.Count() > 0)
                            {
                                var path = @Model.missionMedia.FirstOrDefault(m => m.MissionId == item.MissionId && m.MediaType == "PNG").MediaPath;
                                <img class="card-img-top mission_cardimg" height="220" width="300" src="@path" alt="Card image cap">
                            }
                            else
                            {
                                <img class="card-img-top mission_cardimg" height="220" width="300" src="~/Assest/emptyimage.png" alt="Card image cap">
                            }
                        }
                        <div class="card-img ">
                            <div class="align-item-end loc">
                                <i class="bi bi-geo-alt"></i>
                                @item.City.Name
                            </div>
                            <div class="align-item-end loc hide">
                                <i class="bi bi-geo-alt"></i>
                                @item.Country.Name
                            </div>
                            <div class="align-item-end loc hide">
                                <i class="bi bi-geo-alt"></i>
                                @item.MissionSkills
                            </div>
                            <div class="heart" width="25" height="25">
                                @{
                                    var favorit = @item.FavoriteMissions.FirstOrDefault(m => m.UserId == @Model.user.UserId);

                                    if (favorit != null)
                                    {
                                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-heart-fill fill-red  " style="color:red;pointer-events:none" viewBox="0 0 16 16">
                                            <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z" />


                                        </svg>
                                    }
                                    else
                                    {
                                        <img src="~/Assest/heart.png" alt="">

                                    }

                                }
                            </div>
                            <div class="add_friend">
                                <img src="~/Assest/add1.png" alt="">
                            </div>
                        </div>
                        <div class="env  border">
                            <span>@item.Theme.Title</span>
                        </div>

                        <div class="card-body">
                            <h3 class="card-title" style="color:black !important;">@item.Title</h3>
                            <p class="card-text">@item.ShortDescription</p>
                            <div class="d-flex justify-content-between mb-3 border-bottom pb-5" style="z-index: 1; ">
                                <span class="margin_for_1024">@item.OrganizationName</span>
                                <div>
                                    @{
                                        var rating = @Model.MissionRating.Where(del => del.DeletedAt == null).ToList();
                                        float number = 0;
                                        long sum = 0;
                                        long count = 0;
                                        if (@rating != null)
                                        {
                                            for (int i = 0; i < @rating.Count(); i++)
                                            {
                                                if (@rating[i].MissionId == @item.MissionId)
                                                {
                                                    sum += @rating[i].Rating;
                                                    number++;
                                                    count++;
                                                }
                                            }
                                            float avg = sum / number;
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= avg)
                                                {
