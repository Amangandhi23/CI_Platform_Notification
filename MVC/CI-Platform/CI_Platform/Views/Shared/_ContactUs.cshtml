@model CI_Platform.Entities.ViewModel.Profile

<div class="modal-content">
                <form method="post" asp-controller="Profile" asp-action="ContactUs">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Contact US</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                  <div class="mb-3">
                    <label for="recipient-name" class="col-form-label">Name</label>
                    <input asp-for="@Model.LoginUser.FirstName" readonly type="text" class="form-control" placeholder="Aman Gandhi"/>
                    <span asp-validation-for="@Model.ContactUs.Name" class="text-danger" ></span>
                    
                  </div>
                  <div class="mb-3">
                    <label for="recipient-name" class="col-form-label">Email</label>
                    <input asp-for="@Model.LoginUser.Email" readonly type="text" class="form-control" placeholder="aman@gmail.com">
                    <span asp-validation-for="@Model.ContactUs.Email" class="text-danger" ></span>
                  </div>
                  <div class="mb-3">
                    <label for="recipient-name" class="col-form-label">Subject</label>
                    <input asp-for="@Model.ContactUs.Subject" type="text" class="form-control" placeholder="Enter Your Subject">
                    <span asp-validation-for="@Model.ContactUs.Subject" class="text-danger" ></span>
                  </div>
                  <div class="mb-3">
                    <label for="message-text" class="col-form-label">Message</label>
                    <textarea asp-for="@Model.ContactUs.Message" class="form-control" placeholder="Enter your message"></textarea>
                    <span asp-validation-for="@Model.ContactUs.Message" class="text-danger" ></span>
                  </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary text-center rounded-pill" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn orage_color text-center rounded-pill">Submit</button>
              </div>
              </form>
            </div>