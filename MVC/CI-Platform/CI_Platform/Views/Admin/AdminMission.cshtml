@using System.Globalization
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Admin Mission Page";
    Layout = null;
}

@model CI_Platform.Entities.ViewModel.Admintables

<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha38!important-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/jquery.dataTables.css">
    <link rel="stylesheet" href="/css/jquery.dataTables.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    @*<link rel="stylesheet" href="~/css/Admin.css">*@

    <style>
        .nav-pills .nav-link.active {
            background-color: white;
            color: #f88634;
        }

        .btntext {
            color: white;
        }

        .dataTables_filter {
            margin-bottom: 20px;
        }

        #DataTable_paginate {
            margin-top: 20px;
        }

        
        a:current {
            color: #F88634;
        }

        .view_btn{
            border-radius:24px;
            color: #f88634;
            border-color:#f88634;
        }

        .view_btn:hover{
            background-color: #f88634;
            color:black;
        }

        .drag-card button {
            outline: 0;
            border: 0;
            -webkit-appearence: none;
            background-color: white;
            color: black;
            border-radius: 4px;
            transition: 0.3s;
            cursor: pointer;
            font-weight: 400;
            font-size: 0.8rem;
            padding: 8px 13px;
        }

            .drag-card button:hover {
                opacity: 0.8;
            }

            .drag-card button:active {
                transform: translateY(5px);
            }

        .drag-card .drag-area {
            width: 100%;
            height: 150px;
            border-radius: 5px;
            border: 2px dashed #d5d5e1;
            color: #c8c9dd;
            font-size: 0.9rem;
            font-weight: 500;
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
            user-select: none;
            -webkit-user-select: none;
            margin-top: 10px;
        }

            .drag-card .drag-area .visible {
                font-size: 18px;
            }

        .drag-card .select {
            color: #5256ad;
            margin-left: 5px;
            cursor: pointer;
            transition: 0.4s;
        }

            .drag-card .select:hover {
                opacity: 0.6;
            }

        .drag-card .container-img {
            width: 100%;
            height: auto;
            display: flex;
            justify-content: flex-start;
            align-items: flex-start;
            flex-wrap: wrap;
            max-height: 400px;
            overflow-y: auto;
        }

            .drag-card .container-img .image {
                max-width: 100px;
                width: 100%;
                margin-top: 30px;
                margin-right: 30px;
                height: 100px;
                position: relative;
            }

                .drag-card .container-img .image img {
                    width: 100%;
                    height: 100%;
                    border-radius: 1px;
                }

                .drag-card .container-img .image span {
                    position: absolute;
                    top: -2px;
                    right: 5px;
                    font-size: 20px;
                    cursor: pointer;
                }

        /*dragover class will used in drag and drop system */
        .drag-card .drag-area.dragover {
            background: rgba(0, 0, 0, 0.4);
        }

            .drag-card .drag-area.dragover .on-drop {
                display: inline;
                font-size: 28px;
            }

            .drag-card input,
            .drag-card .drag-area .on-drop,
            .drag-card .drag-area.dragover .visible {
                display: none;
            }



        #PreviewImages {
            width: 100%;
            height: auto;
            display: flex;
            justify-content: flex-start;
            align-items: flex-start;
            flex-wrap: wrap;
            max-height: 400px;
            overflow-y: auto;
        }

        .imageDraft {
            max-width: 100px;
            width: 100%;
            margin-top: 30px;
            margin-right: 30px;
            height: 100px;
            position: relative;
        }

        .CloseSpan {
            position: absolute;
            top: -2px;
            right: 5px;
            font-size: 20px;
            cursor: pointer;
        }

        .ImgDraft {
            width: 100%;
            height: 100%;
            border-radius: 1px;
        }

    </style>
</head>

<body>
    <partial name = "_Notification" />

    <!-- Option 1: Bootstrap Bundle with Popper -->





    <div class="container-fluid">
        <div class="row">
            <div class="col-2 min-vh-100 " style="background-color:#f88634; position:sticky;top:0;">
                <h4 class="mt-4 d-none d-md-block" style="color: white;">Navigation</h4>
                <div class="d-flex row align-items-start mt-4">
                    <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                        <button class="nav-link active ms-2 ms-md-3 me-md-3 mb-md-3 text-start btntext"
                                id="v-pills-home-tab" data-bs-toggle="pill" data-bs-target="#v-pills-User" type="button"
                                role="tab" aria-controls="v-pills-User" aria-selected="true">
                            <i class="bi bi-person"></i>
                            <span class="d-none d-md-inline">User</span>

                        </button>
                        <button class="nav-link ms-2 me-0 ms-md-3 me-md-3 mb-md-3 text-start btntext"
                                id="v-pills-profile-tab" data-bs-toggle="pill" data-bs-target="#v-pills-CMS" type="button"
                                role="tab" aria-controls="v-pills-CMS" aria-selected="false">
                            <i class="bi bi-file-earmark-text"></i>
                            <span class="d-none d-md-inline">CMS Page</span>
                        </button>
                        <button class="nav-link ms-2 ms-md-3 me-md-3 mb-md-3 text-start btntext"
                                id="v-pills-messages-tab" data-bs-toggle="pill" data-bs-target="#v-pills-Mission"
                                type="button" role="tab" aria-controls="v-pills-Mission" aria-selected="false">
                            <i class="bi bi-bullseye"></i>
                            <span class="d-none d-md-inline">Mission</span>
                        </button>
                        <button class="nav-link ms-2 ms-md-3 me-md-3 mb-md-3 text-start btntext"
                                id="v-pills-settings-tab" data-bs-toggle="pill" data-bs-target="#v-pills-theme"
                                type="button" role="tab" aria-controls="v-pills-Skill" aria-selected="false">
                            <i class="bi bi-person"></i>
                            <span class="d-none d-md-inline">Mission Themes</span>
                        </button>
                        <button class="nav-link ms-2 ms-md-3 me-md-3 mb-md-3 text-start btntext"
                                id="v-pills-settings-tab" data-bs-toggle="pill" data-bs-target="#v-pills-Skill"
                                type="button" role="tab" aria-controls="v-pills-Skill" aria-selected="false">
                            <i class="bi bi-person"></i>
                            <span class="d-none d-md-inline">Mission Skills</span>
                        </button>
                        <button class="nav-link ms-2 ms-md-3 me-md-3 mb-md-3 text-start btntext"
                                id="v-pills-settings-tab" data-bs-toggle="pill" data-bs-target="#v-pills-Application"
                                type="button" role="tab" aria-controls="v-pills-Application" aria-selected="false">
                            <i class="bi bi-folder2"></i>
                            <span class="d-none d-md-inline">Mission Application</span>
                        </button>
                        <button class="nav-link ms-2 ms-md-3 me-md-3 mb-md-3 text-start btntext"
                                id="v-pills-settings-tab" data-bs-toggle="pill" data-bs-target="#v-pills-Story"
                                type="button" role="tab" aria-controls="v-pills-Story" aria-selected="false">
                            <i class="bi bi-journal-medical"></i>
                            <span class="d-none d-md-inline">Story</span>
                        </button>
                        <button class="nav-link ms-2 ms-md-3 me-md-3 mb-md-3 text-start btntext"
                                id="v-pills-settings-tab" data-bs-toggle="pill" data-bs-target="#v-pills-Banner"
                                type="button" role="tab" aria-controls="v-pills-Banner" aria-selected="false">
                            <i class="bi bi-emoji-wink"></i>
                            <span class="d-none d-md-inline">Banner Management</span>
                        </button>
                    </div>

                </div>
            </div>

            <div class="col-10">
                <div class="row bg-transperent border mb-4">
                    <div class="col-12 d-flex flex-row align-items-center mb-2 mt-2 justify-content-between">

                        <div>@DateTime.Now.DayOfWeek.ToString(), @CultureInfo.CurrentCulture.DateTimeFormat.GetMonthName(@DateTime.Now.Month) @DateTime.Now.Day, @DateTime.Now.Year, @DateTime.Now.Hour:@DateTime.Now.Minute </div>

                        <div class="dropdown text-end me-sm-5">
                            <a class="d-block link-dark text-decoration-none dropdown-toggle" id="dropdownUser1"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                @{
                                    if(@Model.user != null)
                                    {
                                        var path = @Model.user.Avatar;
                                        <img src="@path" alt="user image" width="40" height="40" class="rounded-circle">    
                                        <span class="d-none d-sm-inline">@Model.user.FirstName @Model.user.LastName</span>
                                    }
                                    
                                }

                                
                            </a>
                            <ul class="dropdown-menu text-small mt-3" aria-labelledby="dropdownUser1" style="max-height:150px;overflow:scroll;">
                                <li><a class="dropdown-item" asp-controller="Home" asp-action="Logout">Sign out</a></li>
                            </ul>
                        </div>

                    </div>
                </div>

                <div class="tab-content" id="v-pills-tabContent">
                    <div class="tab-pane fade show active UserAddData" id="v-pills-User" role="tabpanel"
                         aria-labelledby="v-pills-User-tab">
                        <partial name="_AdminUser" />

                    </div>
                    <div class="tab-pane fade show CMSData" id="v-pills-CMS" role="tabpanel" aria-labelledby="v-pills-CMS-tab">
                        <partial name="_AdminCMS" />
                    </div>
                    <div class="tab-pane fade show MissionData" id="v-pills-Mission" role="tabpanel"
                         aria-labelledby="v-pills-Mission-tab">
                        <partial name="_AdminMission" />
                    </div>
                    <div class="tab-pane fade show ThemeAddData " id="v-pills-theme" role="tabpanel"
                         aria-labelledby="v-pills-Theme-tab">
                        <partial name="_AdminTheme" />
                    </div>
                    <div class="tab-pane fade show SkillAddData " id="v-pills-Skill" role="tabpanel"
                         aria-labelledby="v-pills-Skill-tab">
                        <partial name="_AdminSkills" />
                    </div>
                    <div class="tab-pane fade Missionapplicationforajax" id="v-pills-Application" role="tabpanel"
                         aria-labelledby="v-pills-Application-tab">
                        <partial name="_AdminMissionApplication" />
                    </div>
                    <div class="tab-pane fade Storyforajax" id="v-pills-Story" role="tabpanel" aria-labelledby="v-pills-Story-tab">
                        <partial name="_AdminStory" />
                    </div>
                    <div class="tab-pane fade Bnaaerpartialview" id="v-pills-Banner" role="tabpanel" aria-labelledby="v-pills-Banner-tab">
                        <partial name="_Adminbanner" />
                    </div>
                </div>
            </div>
        </div>
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/DataTable/jquery.dataTables.js" asp-append-version="true"></script>
    <script src="/DataTable/jquery.dataTables.min.js" asp-append-version="true"></script>
    <script src="~/js/Admin.js" asp-append-version="true"></script>

</body>

</html>