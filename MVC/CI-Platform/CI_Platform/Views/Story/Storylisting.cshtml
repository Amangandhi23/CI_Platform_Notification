    <div class="container">
        <h1 class="sharestoryheader mb-4" style="font-family: emoji;">Share your story</h1>
        <form method="post" enctype="multipart/form-data" name="myForm" onsubmit="return validateForm()">
            <div class="row">
                <div class="col-md-4 col-sm-6">
                    <label class="form-label">Select Mission</label>
                    <select asp-for="@Model.Storydata.MissionId" class="form-select mb-3" aria-label="Default select example" id="missionid" required>

                        <option selected value="-1">Select your mission</option>
                        @{
                            var missionid = Model.MissionApplication.Where(m => m.UserId == @Model.UserId && m.DeletedAt == null && m.ApprovalStatus == "APPROVE");
                            @foreach (var item in missionid)
                            {
                                        <option data-missionid="@item.MissionId" id="Mid" value="@item.MissionId">@item.Mission.Title</option>        
                            }
                        }


                    </select>
                    <div style="display:none;" id="MissionIdValidation">
                        <span style="color:red; padding-left:6px">
                            Please Select Mission
                        </span>
                    </div>
                </div>
                <div class="col-md-4 col-sm-6">
                    <div class="mb-3">
                        <label class="form-label">My story title</label>
                        <input  asp-for="@Model.Storydata.Title" type="text" class="form-control mb-3" id="storytitle"
                            aria-describedby="emailHelp" name="title" placeholder="Enter story title">
                       <div id="TitleValidation" style="display:none;">
                           <span style="color:red; padding-left:6px">
                            Required Title
                            </span>
                       </div>
                       <div id="TitleValidationlength" style="display:none;">
                           <span style="color:red; padding-left:6px">
                            The title must be between 5 and 255 characters long.
                            </span>
                       </div>
                       <span asp-validation-for="Title" class="text-danger" ></span>
                    </div>
                </div>
                <div class="col-md-4 col-sm-6">
                    <div class="mb-3">
                        <label class="form-label">Date</label>
                        <input asp-for="@Model.Storydata.Date" type="date" class="form-control mb-3" id="storydate"
                            aria-describedby="emailHelp" >
                    </div>
                </div>


            </div>
            <div class="row mb-4">
                <label class="form-label">My Story</label>

                <div>
                    <textarea asp-for="@Model.Storydata.Description" name="Description" class="ckeditor" id="content"></textarea>
                    <div id="storyValidation" style="display:none;">
                           <span style="color:red; padding-left:6px">
                            Required Story
                            </span>
                       </div>
                    @*<span asp-validation-for="Description" class="text-danger" ></span>*@
                </div>
            </div>
            <div class="row mb-4">
                <div class="col">

                    <label class="form-label">Enter video url</label>
                    <textarea type="text" name="url" class="form-control" id="utubeurl" aria-describedby="emailHelp"
                        placeholder="Enter your url" >@{
                            int i = 1;
                            @if (@Model.storymedia != null)
                            {   
                                @foreach (var item in @Model.storymedia.Where(url => url.Type == "URL"))
                                {
                                    if (i == @Model.storymedia.Where(url => url.Type == "URL").Count())
                                    {
                                        @item.Path
                                    }
                                    else
                                    {
                                        @item.Path

                                        @:
                                    }
                                    i++;
                                }
                            }
                        }</textarea>
                    <div style="display:none;" id="numbersoflinkvalidation">
                        <span style="color:red; padding-left:6px">
                            You can upload a maximum of 20 links 
                        </span>
                    </div>
                    <div style="display:none;" id="utubelinkvalidation">
                        <span style="color:red; padding-left:6px">
                            Please Enter Valid Url
                        </span>
                    </div>
                </div>
            </div>
            <div class="row mb-4">
                <div class="col">

                    <label for="files" class="form-label">Upload your photos</label>


                    <div class="card drag-card" style="border: none;">
                        <div class="drag-area">
                            <span class="visible">
                                <span class="select" role="button"><img src="~/Assest/drag-and-drop.png"></span>
                            </span>
                            <span class="on-drop">Drop images here</span>
                            <input name="files" type="file" class="file" id="file" accept=".png, .jpg, .jpeg" multiple />
                        </div> 

                        <div class="mt-3" id="PreviewImages">
                            @{
                                var urlcount = 1;
                                @if (@Model.storymedia != null)
                                {
                                    @foreach (var item in @Model.storymedia)
                                    {
                                        @if (item.Type != "URL")
                                        {
                                                             <div class="imageDraft" data-id="@item.Path">
                                                                <span class="CloseSpan" onclick="delImageSelect('@item.Path')">&times;</span>
                                                                <img class="ImgDraft" src="@item.Path" value="@item.Path" />
                                                                <input hidden class="imagepathstore" value="@item.Path"/>
                                                              </div>
                                            urlcount++;
                                        }

                                    }
                                }

                            }
                        </div>
                        <!-- IMAGE PREVIEW CONTAINER -->
                        <div class="container-img mt-3" id="imgadd">
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-flex flex-row gap-1 justify-content-between">
                <div>
                    <a type="button" asp-controller="Story" asp-action="Story"
                        class="btn btn-primary px-4 py-1 px-md-5 text-center rounded-pill bg-white border-2 border-secondary " style="color:black;">Cancel</a>
                </div>
                <div>
                    <input asp-for="@Model.StoryIdsForPriview" id="Storyidget" hidden/>
                    <a id="Preview" class="px-4 py-1 px-md-5 orage_color rounded-pill bg-white border-2 "
                         disabled style="display:none; text-decoration:none;">Preview</a>
                    <button type="button" class="px-4 py-1 px-md-5 orage_color rounded-pill bg-white border-2 "
                        onclick="Savestory()">Save</button>
                    <button type="submit" id="submit_btn" class="px-4 py-1 px-md-5 orage_color rounded-pill bg-white border-2 "
                        onclick="textareaval()" disabled style="opacity:0.6;">Submit</button>
                </div>
            </div>
