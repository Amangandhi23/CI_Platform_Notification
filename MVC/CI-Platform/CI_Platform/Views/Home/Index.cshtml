
@model CI_Platform.Entities.ViewModel.Login;
@{
    ViewData["Title"] = "Login Page";
    Layout = "_Layout";
}


        
<div class="col-md-4 col-12 align-items-center d-flex flex-colum mt-2 flex-sm-row justify-content-center">
          <form class="col-xl-10 mx-4 mt-4 sm-3 f_md align-items-center" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group mb-4"> 
                <label asp-for ="Email">Email Address</label>
                <input type="email" class="form-control" id="email" placeholder="evan.donohue@gmail.com" name="email">
            </div>
            <div class="form-group mb-4">
                <label asp-for="Password">Password</label>
                <input type="password" class="form-control" id="pwd" placeholder="****" name="password">
            </div>
            <div class="mb-3">
              <button type="submit" class="btn btn-outline-primary btn_border w-100 h-auto">Login</button><br>
            </div>
            <div class="text-center mb-2">
              <span class="align-items-center mb-3"><a asp-controller="Home" asp-action="Forgot">Lost your password?</a></span>
            </div>
            <div class="text-center mb-5">
              <span offset-md-3>Don’t have an account?<a asp-controller="Home" asp-action="Registration">Create an account</a></span>
            </div>
            <div class="text-center ml-1">
              <span md-1>Privacy Policy</span>
            </div>
          </form>  
</div>
 
